{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "typeRoots": [
         "./src/@types", "node_modules/@types"
      ]
   },
   "include": ["src/**/*", "src/entities/.ts"]
}
